@using Microsoft.AspNetCore.Authorization
@inject IAuthorizationService AuthorizationService

<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Billing</title>
    <script src="~/lib/jquery/jquery.js"></script>
    <script src="~/lib/jquery-validate/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
    <link href="~/lib/bootstrap/css/bootstrap.css" rel="stylesheet" />
    <script src="~/lib/bootstrap/js/bootstrap.bundle.min.js"></script>

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <script src="~/Scripts/webanalytics.js" type="text/javascript"></script>
</head>
<body>
    <partial name="_Header"/>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
        <!-- you can use this for a general puprose loading spinner -->
            <div id="loading-card">
            <div class="overlay"></div>
            <div class="spanner">
                <div class="loader"></div>
                <p>Loading...</p>
            </div>
            </div>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>  
    
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://code.jquery.com/ui/1.13.2/jquery-ui.min.js"></script>
    <link rel="stylesheet" href="https://code.jquery.com/ui/1.12.1/themes/redmond/jquery-ui.css"/>
    <script src="~/lib/font-awesome/all.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
   
    <div class="toast fade" id="info-toast">
        <div class="toast-header">
            <strong class="me-auto" id="toast-title-text">Placeholder Text</strong>
            <small id="toast-header-small-text">Placeholder small text</small>
            <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
        </div>
        <div id="toast-body">
            Placeholder toast body text
        </div>
        <div id="toast-links"></div>
    </div>
</body>
</html>

  <script>
        $('input,select').each(function () {
            var req = $(this).attr('data-val-required');
            if (undefined != req) {
                var label = $('label[for="' + $(this).attr('id') + '"]');
                var text = label.text();
                if (text.length > 0) {
                    label.append('<span style="color:red"> *</span>');
                }
            }
        });
  </script>


